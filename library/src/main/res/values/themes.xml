<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Base.Theme.App" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>

        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowActionBarOverlay">false</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>

        <!-- action mode -->
        <item name="actionModeBackground">@color/primary_dark</item>
        <item name="actionModeSplitBackground">@color/primary_dark</item>

        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="divider">@color/divider</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>

        <item name="floatingLabel">normal</item>
        <item name="primaryColor">@color/accent</item>
        <item name="baseColor">@color/text_primary</item>

    </style>
</resources>
